@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework.UI;
@using Nop.Core;
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    var browser = Request.Browser;
    var isIeEightOrLess = false;
    if (browser.Browser == "IE" && browser.MajorVersion <= 8)
    {
        isIeEightOrLess = true;
    }

    if (isIeEightOrLess)
    {
        if (supportRtl)
        {
            Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/ie8-fix.rtl.css");
        }
        Html.AppendCssFileParts("~/Themes/Allure/Content/css/ie8-fix.css");
    }

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/980.rtl.css");
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/tables.rtl.css");
    }

    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/forum.css");
    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/980.css");
    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/768.css");
    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/480.css");
    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/mobile-only.css");
    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/tables.css");

    
    

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/styles.rtl.css");
    }

    Html.AppendCssFileParts("~/Themes/Allure/Content/CSS/styles.css");

    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/SevenSpikesExtensions.js");
    if (isIeEightOrLess)
    {
        Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/selectivizr.min.js");
        Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/respond.min.js");
    }
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/footable.js");
    Html.AddScriptParts("~/Themes/Allure/Content/scripts/Allure.js");
}