@using Nop.Core.Infrastructure
@using SevenSpikes.Nop.Framework.MVCExtensions;
@model SevenSpikes.Nop.Plugins.MegaMenu.Models.MegaMenuManufacturersModels
@if (Model.ManufacturersModels.Count > 0)
{
    var megaMenuSettings = EngineContext.Current.Resolve<SevenSpikes.Nop.Plugins.MegaMenu.Domain.MegaMenuSettings>();
    <li>
        <a href="@Url.RouteUrl("ManufacturerList")">@T("SevenSpikes.MegaMenu.Admin.Settings.ManufacturersItemNameValue")</a>
        <div class="dropdown manufacturers fullWidth">
            <div class="row-wrapper">
                @(Html.DataTable<Nop.Web.Models.Catalog.ManufacturerModel>(Model.ManufacturersModels, 6, "row", "box",
                    @<text>
                        <div class="title">
                            <a class="manufacturer" href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })"><strong>@item.Name</strong></a>
                        </div><!-- title -->
                        <ul>
                            <li>
                                <a class="manufacturer" href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })">
                                    <span><img class="lazy" src="#" data-original="@item.PictureModel.ImageUrl" alt="@item.PictureModel.AlternateText"/></span>
                                </a>
                            </li>
                        </ul>
                    </text>
                ))
            </div>
        </div><!--dropdown-->
    </li>
}
